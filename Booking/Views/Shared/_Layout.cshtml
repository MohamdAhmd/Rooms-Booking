                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav item">
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="@Url.Action("Index", "Hotel")">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link active" aria-current="page" href="@Url.Action("Index", "Hotel")">About</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>

    </header>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
